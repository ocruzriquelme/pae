<%= simple_form_for @grupo_tutores, url: grupotutores_url, as: 'nuevo_grupo_tutor'  do |f| %>
    <%= f.error_notification %>


    <p>
    <%= f.label :grupo_tutor %><br>
    <%= f.select('estudiante_id', Estudiante.where(rol_id: (Rol.find_by_nombres('Tutor')).id).collect {|c| [c.nombres, c.id]}, { include_blank: false }, {class: 'chosen-select'}) %>
    </p>


    <%= f.button :submit, "Guardar", class: "my-button" %>




    <% end %>